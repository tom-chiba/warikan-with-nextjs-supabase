{
	"$schema": "https://biomejs.dev/schemas/1.6.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"lineEnding": "crlf"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedImports": "error"
			}
		}
	},
	"files": {
		"ignore": [
			".next/**/*",
			"node_modules/**/*",
			"tests/playwright/.auth/**/*"
		],
		"include": ["app/**/*", "components/**/*", "lib/**/*", "tests/**/*"]
	}
}
